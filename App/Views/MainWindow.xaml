<Window x:Class="BankFlowAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankFlowAnalyzer.Views"
        xmlns:vm="clr-namespace:BankFlowAnalyzer.ViewModels"
        mc:Ignorable="d"
        Title="银行流水分析系统" Height="720" Width="1200">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel>
        <DockPanel Background="#0F172A" Height="48" DockPanel.Dock="Top">
            <TextBlock Text="银行流水分析系统" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="12,0"/>
        </DockPanel>
        <TabControl>
            <TabItem Header="数据导入">
                <local:ImportView />
            </TabItem>
            <TabItem Header="流水列表">
                <local:TransactionsView />
            </TabItem>
            <TabItem Header="数据分析">
                <local:AnalysisView />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>