<UserControl x:Class="BankFlowAnalyzer.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BankFlowAnalyzer.ViewModels">
    <UserControl.DataContext>
        <vm:TransactionsViewModel/>
    </UserControl.DataContext>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="筛选：" VerticalAlignment="Center"/>
            <TextBox Width="220" Margin="8,0,0,0" Text="{Binding Keyword}"/>
            <Button Content="搜索" Command="{Binding SearchCommand}" Margin="8,0,0,0"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" AutoGenerateColumns="True" IsReadOnly="True"/>
    </Grid>
</UserControl>