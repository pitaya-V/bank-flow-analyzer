<UserControl x:Class="BankFlowAnalyzer.Views.ImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BankFlowAnalyzer.ViewModels">
    <UserControl.DataContext>
        <vm:ImportViewModel/>
    </UserControl.DataContext>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="选择文件夹" Command="{Binding BrowseFolderCommand}"/>
            <TextBlock Text="{Binding SelectedFolder}" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <Button Content="导入示例数据" Command="{Binding ImportSampleCommand}" Margin="8,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding PreviewRows}" AutoGenerateColumns="True" IsReadOnly="True"/>

        <TextBlock Grid.Row="2" Text="{Binding Status}" Margin="0,8,0,0"/>
    </Grid>
</UserControl>